@model IEnumerable<System.String>

@{
    ViewBag.Title = "Worksheets";
}

<h2>Select Worksheet from Wordbook</h2>
<dl>
    <dt>VendorName</dt>
    <dd>@ViewBag.VendorName [@ViewBag.VendorID]</dd>

    <dt>WorkbookName</dt>
    <dd>@ViewBag.WorkbookName</dd>
</dl>

<form action="/Excel/Columns" method="post" enctype="multipart/form-data">

    <input hidden name="vendorID" value="@ViewBag.VendorID" />
    <input hidden name="vendorName" value="@ViewBag.VendorName" />
    <input hidden name="workbookName" value="@ViewBag.WorkbookName" />

    <select name="worksheetName">
        @foreach (var item in Model)
        {
            <option value="@item">@item</option>
        }
    </select>
    <button type="submit">Submit</button>
</form>
