@model Vendord.Models.LoginModel

<div class="panel panel-default">
    <div class="panel-body">

        @using (Html.BeginForm("Login", "Account", new { returnUrl = @ViewBag.ReturnUrl, referringView = @ViewBag.ReferringView }, FormMethod.Post, new { id = "login", name = "login" }))
        {
            @Html.AntiForgeryToken()
            <fieldset>
                <legend>Log in with a Vendord account.</legend>
                <div class="form-group">
                    @Html.EditorFor(m => m.LoginUserName)
                    @Html.ValidationMessageFor(m => m.LoginUserName)
                </div>
                <div class="form-group">
                    @Html.EditorFor(m => m.LoginPassword)
                    @Html.ValidationMessageFor(m => m.LoginPassword)
                </div>
                <div class="checkbox">
                    @Html.EditorFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
                <div class="btn-group">
                    <button type="submit" form="login" class="btn btn-primary">Log in</button>
                    <button type="reset" form="login" class="btn btn-default">Reset</button>
                </div>
            </fieldset>
        }

    </div>

</div>
