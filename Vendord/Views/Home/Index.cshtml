<div class="row">
    <div class="col-sm-6">
        <h3>Welcome to Vendord</h3>
        <dl>
            <dt>Manage...</dt>
            <dd>Manage any business entity by using create, read, update, and delete operations.</dd>
            <dt>Manage Vendors</dt>
            <dd>Drill down to view the products that each vendor sells.</dd>
            <dt>Manage products</dt>
            <dd>Drill down to view the vendors that sell each product.</dd>
            <dt>Manage vendor products</dt>
            <dd>Associate products with vendors.</dd>
        </dl>
    </div>

    @if (!Request.IsAuthenticated)
    {
        ViewBag.ReferringView = "~/Views/Home/Index.cshtml";
        ViewBag.ReturnUrl = "/";
        
        <div class="col-sm-6">

            @Html.ValidationSummary(true)
            @Html.Partial("_Login", new Vendord.Models.LoginModel())
            @Html.Partial("_Register", new Vendord.Models.RegisterModel())

        </div>

    }

</div>
